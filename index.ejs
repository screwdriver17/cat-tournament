<!DOCTYPE html>
<html>
<head>
    <title>Cat Tournament</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            color: #2c3e50;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            color: #2c3e50;
            position: relative;
            display: inline-block;
        }

        h1::before, h1::after {
            content: 'üêæ';
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 0.8em;
        }

        h1::before {
            left: -50px;
        }

        h1::after {
            right: -50px;
        }

        .round-info {
            background: rgba(255, 255, 255, 0.9);
            padding: 15px 30px;
            border-radius: 25px;
            font-size: 1.2em;
            display: block;
            margin: 0 auto 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            color: #e67e22;
            font-weight: 600;
            border: 2px solid #f39c12;
            width: fit-content;
        }

        .cats-container {
            display: flex;
            justify-content: center;
            gap: 60px;
            margin: 40px 0;
            flex-wrap: wrap;
            position: relative;
        }

        .cat-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 30px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            border: 3px solid transparent;
            overflow: hidden;
        }

        .cat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #e67e22, #f39c12);
            border-radius: 5px 5px 0 0;
        }

        .cat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
            border-color: #f39c12;
        }

        .cat-image {
            width: 400px;
            height: 400px;
            object-fit: cover;
            border-radius: 20px;
            transition: transform 0.3s ease;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

        .vote-button {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 30px;
            font-size: 1.2em;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 80%;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .vote-button:hover {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(230, 126, 34, 0.4);
        }

        .vote-button:active {
            transform: translateY(0);
        }

        .versus {
            font-size: 3em;
            font-weight: 700;
            color: #e67e22;
            margin: 0 20px;
            align-self: center;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            position: relative;
        }

        .versus::before, .versus::after {
            content: 'üê±';
            position: absolute;
            font-size: 0.5em;
            left: 50%;
            transform: translateX(-50%);
        }

        .versus::before {
            top: -40px;
        }

        .versus::after {
            bottom: -40px;
        }

        #winner-display {
            display: none;
            animation: fadeIn 0.8s ease;
        }

        .winner-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 30px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
            margin: 40px auto;
            max-width: 600px;
            border: 3px solid #f39c12;
            position: relative;
        }

        .winner-card::before {
            content: 'üëë';
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 3em;
            text-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        button.new-tournament {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            color: white;
            border: none;
            padding: 20px 40px;
            border-radius: 30px;
            font-size: 1.2em;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 30px;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 8px 20px rgba(230, 126, 34, 0.4);
        }

        button.new-tournament:hover {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(230, 126, 34, 0.5);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 1024px) {
            .cat-image {
                width: 300px;
                height: 300px;
            }
            h1 {
                font-size: 2.5em;
            }
        }

        @media (max-width: 768px) {
            .cats-container {
                flex-direction: column;
                align-items: center;
                gap: 40px;
            }
            .versus {
                margin: 20px 0;
            }
            .cat-image {
                width: 250px;
                height: 250px;
            }
            .vote-button {
                padding: 12px 25px;
                font-size: 1em;
            }
            h1 {
                font-size: 2em;
            }
            h1::before, h1::after {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üê± Cat Tournament üê±</h1>
        <div class="round-info">
            Round <%= currentRoundNumber %> - Remaining pairs: <%= remainingPairs %>
        </div>
        
        <div id="voting-section">
            <h2>Choose Your Champion!</h2>
            <div class="cats-container">
                <div class="cat-card">
                    <img src="<%= cat1.url %>" class="cat-image" alt="Cat 1">
                    <button class="vote-button" onclick="vote('<%= cat1.id %>')">Vote for this cat!</button>
                </div>
                <div class="versus">VS</div>
                <div class="cat-card">
                    <img src="<%= cat2.url %>" class="cat-image" alt="Cat 2">
                    <button class="vote-button" onclick="vote('<%= cat2.id %>')">Vote for this cat!</button>
                </div>
            </div>
        </div>

        <div id="winner-display">
            <h2>üéâ Tournament Champion! üéâ</h2>
            <div class="winner-card">
                <img id="winner-image" class="cat-image" alt="Winner">
            </div>
            <button class="new-tournament" onclick="location.reload()">Start New Tournament</button>
        </div>
    </div>

    <script>
        async function vote(winnerId) {
            const response = await fetch('/vote', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ winnerId })
            });
            
            const data = await response.json();
            
            if (data.winner) {
                document.getElementById('voting-section').style.display = 'none';
                document.getElementById('winner-display').style.display = 'block';
                document.getElementById('winner-image').src = data.winner.url;
            } else {
                const cats = document.getElementsByClassName('cat-image');
                cats[0].src = data.cat1.url;
                cats[1].src = data.cat2.url;
                
                const voteButtons = document.getElementsByClassName('vote-button');
                voteButtons[0].onclick = () => vote(data.cat1.id);
                voteButtons[1].onclick = () => vote(data.cat2.id);
                
                document.querySelector('.round-info').textContent = 
                    `Round ${data.currentRoundNumber} - Remaining pairs: ${data.remainingPairs}`;
            }
        }
    </script>
</body>
</html> 